<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mcmp.mc.observability.agent.mapper.MiningDBMapper">

    <select id="getDetail" resultType="MiningDBInfo">
        SELECT
            `SEQ`,
            `URL`,
            `DATABASE`,
            `RETENTION_POLICY`,
            `USERNAME`,
            `PASSWORD`
        FROM m_cmp_agent_mining_db
    </select>

    <insert id="insertMiningDB">
        INSERT INTO m_cmp_agent_mining_db(`URL`, `DATABASE`, `RETENTION_POLICY`, `USERNAME`, `PASSWORD`)
        VALUES (
                 #{url}
               , #{database}
               , #{retentionPolicy}
               , #{username}
               , #{password}
               )
    </insert>

    <delete id="deleteMiningDB">
        DELETE FROM m_cmp_agent_mining_db WHERE SEQ=#{seq}
    </delete>

</mapper>